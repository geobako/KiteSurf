<% include ../partials/header %>

   


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Explore the best Kitespots in Greece</h1>
            <p>View our best kitespots from all over Greece</p>
            <p>
                <a class="btn btn-primary  btn-lg" href="/kitespots/new">Add a new spot</a>
            </p>
        </div>
    </header>

    
    
        
        
    
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% kitespots.forEach(function(kitespot){%>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%= kitespot.image %>">
                    <div class="caption">
                        <h4><%= kitespot.name %></h4>
                        <% if (kitespot.rating === 0) { %>
                        <em>No reviews yet.</em>
                        <% } else { %>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star <% if (kitespot.rating > 1.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (kitespot.rating > 2.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (kitespot.rating > 3.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (kitespot.rating > 4.5) { %> checked <% } %>"></span>
                        <% } %>
                    </div>
                    <p>
                        <a href="/kitespots/<%= kitespot._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>



<% include ../partials/footer %>