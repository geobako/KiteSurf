<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= kitespot.name %></h1>
        
        <div style="width:30%; margin:30px auto;">
            <form action="/kitespots/<%= kitespot._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="kitespot[name]" value="<%= kitespot.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="kitespot[wind]" valuer="<%= kitespot.wind %>" min="1" step="0.2">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="kitespot[image]" value="<%= kitespot.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="kitespot[description]" value="<%= kitespot.description %>">
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/kitespots">Go Back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>